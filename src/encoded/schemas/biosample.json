{
    "title": "Biosample",
    "description": "Schema for submitting a biosample.",
    "id": "/profiles/biosample.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["organism"],
    "calculated_props": ["organ_slims", "system_slims", "developmental_slims"],
    "facets": [{"Biosample Type": "biosample_type"}, {"Strain":"organism.name"}, {"Subcellular Fraction": "subcellular_fraction"}, {"Phase": "phase"}, {"Treatment": "treatments.treatment_term_name"}],
    "identifyingProperties": ["uuid","accession","aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/biosample_classification"},
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/source" },
        { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "BS"
        },
        "description": {
            "title": "Description",
            "description": "A plain text description of the biosample. Do not include experiment details, constructs or treatments.",
            "type": "string",
            "default": ""
        },
       "constructs": {
            "title": "DNA constructs",
            "description": "Expression or targeting vectors stably or transiently transformed.",
            "type": "array",
            "default": [],
            "items": {
                "title": "DNA Constructs",
                "description": "An expression or targeting vector stably or transiently transformed.",
                "comment": "See construct.json for available identifiers.",
                "type":  "string",
                "linkTo": "construct"
            }
        },
        "treatments": {
            "title": "Treatments",
            "type": "array",
            "default": [],
            "items": {
                "title": "Treatment",
                "comment": "See treatment.json for available identifiers.",
                "type": "string",
                "linkTo": "treatment"
            }
        },
        "organism": {
            "title": "Organism",
            "comment": "See organism.json for available identifiers. Really strains",
            "type": "string",
            "linkTo": "organism"
        },
         "derived_from": {
            "title": "Derived from",
            "description": "The biosamples from which the sample derives from via constructs or treatments.",
            "type": "array",
            "default": [],
            "items": {
                "description": "A biosample that the sample derives from via a construct or treatment.",
                "comment": "See biosample.json for available identifiers.",
                "type": "string",
                "linkTo": "biosample"
            }
        },
        "pooled_from": {
            "title": "Pooled from",
            "description": "The biosamples from which aliquots were pooled to form the biosample.",
            "type": "array",
            "default": [],
            "items": {
                "description": "A biosample from which an aliquot was taken to form the biosample.",
                "comment": "See biosample.json for available identifiers.",
                "type": "string",
                "linkTo": "biosample"
            }
        },
        "part_of": {
            "title": "Separated from",
            "description": "The biosamples from which a discrete component were taken. That component is this biosample.",
            "type": "array",
            "default": [],
            "items": {
                "description": "A biosample from which a discrete component was taken. That component is this biosample.",
                "comment": "See biosamples.json for available identifiers.",
                "type": "string",
                "linkTo": "biosample"
            }
        },
        "note": {
            "title": "Note",
            "description": "Additional information pertaining to the biosample.",
            "type": "string"
        },
        "subcellular_fraction": {
            "title": "Subcellular fraction",
            "description": "The cellular component that constitutes the biosample.",
            "type": "string",
            "enum": [
                "nucleus", 
                "cytosol", 
                "chromatin",
                "membrane",
                "mitochondria",
                "nuclear matrix",
                "nucleolus",
                "nucleoplasm",
                "polysome"
            ]
        },
        "phase": {
            "title": "Cell-cycle phase",
            "type": "string",
            "enum": [
                "G1",
                "G1b",
                "G2",
                "S1",
                "S2",
                "S3",
                "S4"
            ]
        },
        "starting_amount": {
            "title": "Starting amount",
            "description": "The initial quantity of cells, or nucleic acid obtained.",
            "type": "string"
        },
        "starting_amount_units": {
            "title": "Starting amount units",
            "type": "string",
            "enum": [
                "g","mg","cells/ml","cells", "OD", "items", "Î¼g"
            ]
        },
        "url": {
            "title": "URL",
            "description": "An external resource with additional information about the biosample.",
            "type": "string",
            "format": "uri"
        }
    },
    "boost_values": {
        "accession": 1.0,
        "biosample_term_id": 1.0,
        "biosample_type": 1.5,
        "organism.name": 1.0,
        "organism.scientific_name": 1.0,
        "organism.taxon_id": 1.0 
    }
}
