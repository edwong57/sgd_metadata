{
    "title": "Base characterization review",
    "description": "Schema for submitting a review of the characterization.",
    "id": "/profiles/characterization_review.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "award", "lab", "reviews" ],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/biosample_classification" },
        { "$ref": "mixins.json#/submitted" }
    ],
    "properties": {
 
        "schema_version": {
            "hidden comment": "Bump the default in the subclasses."
        },
 
        "reviews": {
            "description": "The specific entity for which the review applies.",
            "type": "string"
        }
    }
}